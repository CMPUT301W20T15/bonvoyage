<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splash_page_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/splash_page" />

    <TextView
        android:id="@+id/BonVovage_Splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_bold"
        android:gravity="top|center"
        android:text="BonVovage"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/whiteBox"
        android:layout_width="391dp"
        android:layout_height="400dp"
        android:layout_below="@id/BonVovage_Splash"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/white_backgroundroundcorner" />
    <TextView
        android:id="@+id/sign_in_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BonVovage_Splash"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20dp"
        android:text="SIGN IN" />
    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_title"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:maxLines="1" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:hint="Password"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1" />

    <Button
        android:id="@+id/email_sign_in_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:backgroundTint="#1A237E"
        android:fontFamily="@font/roboto_bold"
        android:text="Sign In"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>
