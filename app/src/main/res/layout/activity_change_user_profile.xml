<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1"
    android:orientation="vertical"

    tools:context=".ChangeUserProfile">

    <include layout="@layout/menu_toolbar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@drawable/splash_page">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:id="@+id/first_box"
        android:layout_marginTop="219dp"
        android:background="#E8BD38" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:id="@+id/second_box"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="140dp"
        android:background="#29A4F6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="82dp"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Account"
            android:textColor="@color/White"
            android:textSize="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#FFFFFF"
        android:id="@+id/form_fill"
        android:layout_marginTop="200dp"
        android:paddingTop="30dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp">

        <EditText
            android:id="@+id/change_name"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:paddingLeft="30dp"
            android:background="#40CCC8C8"
            android:textColor="#6D77B1" />

        <EditText
            android:id="@+id/change_phone"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/change_name"
            android:paddingLeft="30dp"
            android:background="#40CCC8C8"
            android:textColor="#6D77B1"
             />

        <EditText
            android:id="@+id/change_email"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/change_phone"
            android:paddingLeft="30dp"
            android:background="#40CCC8C8"
            android:textColor="#6D77B1" />

        <ToggleButton
            android:id="@+id/change_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/change_email"
            android:background="#40CCC8C8"
            android:textColor="#DF0B082C"
            android:textSize="15dp"
            android:textOff="Edit"
            android:textOn="Save" />




    </RelativeLayout>


</RelativeLayout>