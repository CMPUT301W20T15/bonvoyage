<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include layout="@layout/menu_toolbar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_page">

        <ImageView
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:id="@+id/first_box"
            android:layout_marginTop="219dp"
            android:background="#4CAF93" />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:id="@+id/second_box"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="140dp"
            android:background="#009688" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="82dp"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Wallet"
            android:textColor="@color/White"
            android:textSize="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#00FFFFFF"
        android:layout_marginTop="300dp"
        android:paddingTop="30dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp">

        <TextView
            android:id="@+id/wallet_lab"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/rufina_bold"
            android:textSize="25dp"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:text="Current balance"

            android:background="#163E5E"

            android:textColor="#B1B9E4"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/wallet_val"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/wallet_lab"

            android:fontFamily="@font/rufina_bold"
            android:textSize="25dp"
            android:paddingTop="20dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:background="#40CCC8C8"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal" />
    </RelativeLayout>

</RelativeLayout>