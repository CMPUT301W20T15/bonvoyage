<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <Button
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:background="#fff"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Call your driver"
        android:drawableLeft="@drawable/ic_call_black_24dp"
        android:id="@+id/rs_call_btn"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:background="#fff"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Text your driver"
        android:drawableLeft="@drawable/ic_textsms_black_24dp"
        android:id="@+id/rs_text_btn"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:background="#fff"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Email your driver"
        android:id="@+id/rs_email_btn"
        />

</LinearLayout>